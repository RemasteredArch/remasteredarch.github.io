---
import type { CollectionEntry } from "astro:content";
import { getEntries } from "astro:content";

interface Props {
    blog_post: CollectionEntry<"blog">;
}

const { slug } = Astro.props.blog_post;
const { title, description, published, last_updated, tags: tag_references } = Astro.props.blog_post.data;

const tags = await getEntries(tag_references);
---

<li class="card">
    <h3><a href={`/blog/${slug}`}>{title}</a></h3>
    <p>{description}</p>
    <small
        >Published: {
            published.toLocaleDateString("en-US", {
                month: "long",
                day: "numeric",
            })
        }</small
    >
    {
        last_updated && (
            <small>
                Last updated:{" "}
                {last_updated.toLocaleDateString("en-US", {
                    month: "long",
                    day: "numeric",
                })}
            </small>
        )
    }
    <small>
        Tags:
        <ul>
            {
            tags.map(({ id, data }) => (
                    <li>
                        <a href=`/blog/tags/${id}/`>{data.name}</a>
                    </li>
                ))
            }
        </ul>
    </small>
</li>

<style>
    .card {
        display: flex;
        flex-direction: column;
        flex-wrap: nowrap;
        align-items: start;
        justify-content: start;
        row-gap: 1rem;
        margin-bottom: 2rem;

        width: 100%;
        max-width: 35ch;
    }

    h3 a {
        text-decoration: none;
    }

    ul {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        align-items: start;
        align-content: start;
        justify-content: start;
        gap: 1rem;

        width: 100%;
        list-style: none;
        padding: 0;
        margin-left: 2ch;
    }
</style>
